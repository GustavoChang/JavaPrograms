<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lltitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@layout/layout_titulo"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/txttitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FOTOS"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/svcorpo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/llcorpo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llfotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="#fff"
                android:orientation="vertical" >

                <ProgressBar
                    android:id="@+id/pbenviofoto"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/tlfoto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/trfoto1"
                    android:background="#002f2f">

                    <TextView
                        android:id="@+id/tvfotoqtde1"
                        android:layout_margin="2dp"
                        android:background="#d3e0e0"
                        android:gravity="center_horizontal"
                        android:padding="3dip"
                        android:text="Qtde"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvfotoenviada1"
                        android:layout_margin="2dp"
                        android:background="#d3e0e0"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="Enviadas"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvfotoenviar1"
                        android:layout_margin="2dp"
                        android:background="#d3e0e0"
                        android:gravity="center_horizontal"
                        android:padding="3dip"
                        android:text="Enviar"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/trfoto2"
                    android:background="#002f2f">

                    <TextView
                        android:id="@+id/tvfotoqtde2"
                        android:layout_margin="2dp"
                        android:background="#ffffff"
                        android:gravity="center_horizontal"
                        android:padding="3dip"
                        android:text="0"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tvfotoenviada2"
                        android:layout_margin="2dp"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="0"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tvfotoenviar2"
                        android:layout_margin="2dp"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="0"
                        android:textColor="#000000" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="40dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <Button
                    android:id="@+id/btavancar"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="@layout/button_shape_002"
                    android:text="Enviar"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>